mixin ordering()
  -
    const list = [
      {
        icon: {
          src: "icon-search",
          width: 55,
          height: 55
        },
        text: "Lorem ipsum dolor sit amet",
        points: true
      },
      {
        icon: {
          src: "icon-percent",
          width: 55,
          height: 55
        },
        text: "Сonsecteturadipiscing elit",
        points: true
      },
      {
        icon: {
          src: "icon-file",
          width: 55,
          height: 55
        },
        text: "Sed do eiusmod tempor",
        points: true
      },
      {
        icon: {
          src: "icon-mail",
          width: 55,
          height: 55
        },
        text: "Esse cillum dolore eu fugiat",
        points: true
      },
      {
        icon: {
          src: "icon-money",
          width: 55,
          height: 55
        },
        text: "Excepteur sint occaecat cupidatat non proident",
        points: false
      }
    ]

  section.ordering
    .ordering__background
      +picture("content", "ordering-background", "png", 1920, 920, "background")
    .container
      .ordering__wrapper
        h2.ordering__title Оформление
          =" "
          span заказа
        p.ordering__description Перед заполнением формы ознакомьтесь с&nbsp;нашей схемой работы!
        ul.ordering__list
          each item in list
            li.ordering__item
              .ordering__circle
                +icon(item.icon.src, item.icon.width, item.icon.height)
              span.ordering__text!=item.text
              if item.points
                .ordering__points
                  span.ordering__point.ordering__point--first
                  span.ordering__point.ordering__point--second
                  span.ordering__point.ordering__point--third
                  span.ordering__point.ordering__point--fourth
                  span.ordering__point.ordering__point--fifth
        .ordering__form
          form(method="get")
            .ordering__form-wrapper
              +custom-select({
                placeholder: "Выберите тип системы",
                optionsList: [
                  {text: "Sed ut perspiciatis", value: "option-1"},
                  {text: "Nemo enim ipsam", value: "option-2"},
                  {text: "Et harum quidem", value: "option-3"},
                  {text: "Temporibus autem", value: "option-4"},
                  {text: "Itaque earum rerum", value: "option-5"},
                  {text: "Sed ut perspiciatis", value: "option-6"},
                  {text: "Nemo enim ipsam", value: "option-7"},
                  {text: "Et harum quidem", value: "option-8"},
                  {text: "Temporibus autem", value: "option-9"},
                  {text: "Itaque earum rerum", value: "option-10"}
                ]
              })
              +custom-input({
                inputType: "email",
                inputName: "email",
                inputPlaceholder: "Ваш e-mail"
              })
              +custom-input({
                inputType: "text",
                inputName: "name",
                inputPlaceholder: "Ваше имя"
              })
              .ordering__range-slider(data-range)
                span.ordering__info
                  span.ordering__label Sed ut&nbsp;perspiciatis, unde omnis iste natus
                  span.ordering__number(data-range-number) 75 %
                label
                  input(type="range" name="range" min="0" max="100" value="75" data-range-input)
              +custom-input({
                inputIcon: {
                  src: "icon-upload",
                  width: 18,
                  height: 21
                },
                inputLabel: "Прикрепить файл",
                inputType: "file",
                inputName: "file"
              }).custom-input--upload
            +btn({text: "Отправить", type: "submit"}).btn--big.ordering__button
